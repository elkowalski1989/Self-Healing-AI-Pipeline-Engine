<UserControl x:Class="SelfHealingPipeline.Views.SetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Pipeline Setup" FontSize="20" FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"/>
                    <TextBlock Text="Describe what you want to fix or improve. Claude will figure out the rest."
                               FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                </StackPanel>
                <Button x:Name="CopyAllButton" Grid.Column="1" Cursor="Hand"
                        BorderThickness="0" VerticalAlignment="Top"
                        Padding="12,6" ToolTip="Copy entire conversation">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bd" CornerRadius="8" Padding="{TemplateBinding Padding}"
                                    Background="{DynamicResource CardBrush}"
                                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ“‹" FontSize="12" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock x:Name="BtnLabel" Text="Copy All" FontSize="12"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bd" Property="BorderBrush"
                                            Value="{StaticResource AccentBrush}"/>
                                    <Setter TargetName="BtnLabel" Property="Foreground"
                                            Value="{DynamicResource TextPrimaryBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Chat area -->
        <Border Grid.Row="1" CornerRadius="12" Background="{DynamicResource SurfaceBrush}"
                Padding="8">
            <ScrollViewer x:Name="ChatScroller" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ChatPanel">
                    <!-- Typing indicator (hidden by default) -->
                    <Border x:Name="TypingIndicator" Visibility="Collapsed"
                            CornerRadius="12" Padding="14,10" Margin="8,4"
                            MaxWidth="100" HorizontalAlignment="Left"
                            Background="{DynamicResource CardBrush}">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="Dot1" Width="6" Height="6" Fill="{DynamicResource TextMutedBrush}" Margin="0,0,4,0"/>
                            <Ellipse x:Name="Dot2" Width="6" Height="6" Fill="{DynamicResource TextMutedBrush}" Margin="0,0,4,0"/>
                            <Ellipse x:Name="Dot3" Width="6" Height="6" Fill="{DynamicResource TextMutedBrush}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Input bar -->
        <StackPanel Grid.Row="2" Margin="0,12,0,0">
            <Border CornerRadius="12" Padding="6"
                    Background="{DynamicResource SurfaceBrush}"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="InputBox" Grid.Column="0"
                             FontSize="13" Padding="10,8"
                             Background="Transparent" BorderThickness="0"
                             Foreground="{DynamicResource TextPrimaryBrush}"
                             AcceptsReturn="False"
                             VerticalContentAlignment="Center">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="CaretBrush" Value="{DynamicResource TextPrimaryBrush}"/>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Placeholder text -->
                    <TextBlock x:Name="PlaceholderText" Grid.Column="0"
                               Text="Describe your pipeline task..."
                               FontSize="13" Padding="12,8"
                               Foreground="{DynamicResource TextMutedBrush}"
                               IsHitTestVisible="False" VerticalAlignment="Center"/>

                    <Button x:Name="SendButton" Grid.Column="1" Padding="10,8"
                            Cursor="Hand" BorderThickness="0" Margin="4,0,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Bd" Background="{StaticResource AccentBrush}"
                                        CornerRadius="8" Padding="{TemplateBinding Padding}">
                                    <TextBlock Text="âž¤" FontSize="14" Foreground="White"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Bd" Property="Background"
                                                Value="{StaticResource AccentHoverBrush}"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="Bd" Property="Opacity" Value="0.4"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
            <!-- Status line below input -->
            <TextBlock x:Name="StatusLine" Text="" FontSize="10"
                       Foreground="{DynamicResource TextMutedBrush}"
                       Margin="12,4,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
