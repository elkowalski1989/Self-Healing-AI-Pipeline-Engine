<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background layers -->
    <SolidColorBrush x:Key="WindowBrush" Color="#f5f5f7"/>
    <SolidColorBrush x:Key="SidebarBrush" Color="#eaeaef"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#ffffff"/>
    <SolidColorBrush x:Key="CardBrush" Color="#f0f0f4"/>
    <SolidColorBrush x:Key="CardHoverBrush" Color="#e8e8ed"/>
    <SolidColorBrush x:Key="InputBrush" Color="#ffffff"/>

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1a1b2e"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#6b6c7e"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#9b9cae"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBrush" Color="#d8d8e0"/>
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="#e8e8f0"/>

    <!-- Scrollbar -->
    <SolidColorBrush x:Key="ScrollBarBrush" Color="#c8c8d0"/>
    <SolidColorBrush x:Key="ScrollBarHoverBrush" Color="#b0b0b8"/>

    <!-- Log source badges -->
    <SolidColorBrush x:Key="BadgeEngineBrush" Color="#6366f1"/>
    <SolidColorBrush x:Key="BadgeClaudeBrush" Color="#7c3aed"/>
    <SolidColorBrush x:Key="BadgeStepBrush" Color="#0891b2"/>

</ResourceDictionary>
