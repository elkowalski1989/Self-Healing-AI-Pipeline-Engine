<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Background layers -->
    <SolidColorBrush x:Key="WindowBrush" Color="#1a1b2e"/>
    <SolidColorBrush x:Key="SidebarBrush" Color="#15162a"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#232436"/>
    <SolidColorBrush x:Key="CardBrush" Color="#2a2b3d"/>
    <SolidColorBrush x:Key="CardHoverBrush" Color="#323348"/>
    <SolidColorBrush x:Key="InputBrush" Color="#1e1f33"/>

    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#f0f0f5"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#9394a5"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#5d5e72"/>

    <!-- Borders -->
    <SolidColorBrush x:Key="BorderBrush" Color="#2e2f44"/>
    <SolidColorBrush x:Key="BorderSubtleBrush" Color="#252638"/>

    <!-- Scrollbar -->
    <SolidColorBrush x:Key="ScrollBarBrush" Color="#3a3b50"/>
    <SolidColorBrush x:Key="ScrollBarHoverBrush" Color="#4a4b60"/>

    <!-- Log source badges -->
    <SolidColorBrush x:Key="BadgeEngineBrush" Color="#6366f1"/>
    <SolidColorBrush x:Key="BadgeClaudeBrush" Color="#a78bfa"/>
    <SolidColorBrush x:Key="BadgeStepBrush" Color="#22d3ee"/>

</ResourceDictionary>
