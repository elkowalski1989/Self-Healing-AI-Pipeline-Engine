<UserControl x:Class="SelfHealingPipeline.Controls.LogEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">
    <Border Padding="8,3" Margin="0,0,0,1">
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="TimestampText" Text="00:00:00" FontSize="11"
                       FontFamily="Cascadia Code,Consolas,Courier New"
                       Foreground="{DynamicResource TextMutedBrush}"
                       VerticalAlignment="Top" Margin="0,0,8,0" MinWidth="62"/>
            <Border x:Name="SourceBadge" CornerRadius="4" Padding="5,1" Margin="0,0,8,0"
                    VerticalAlignment="Top" MinWidth="50"
                    Background="{DynamicResource BadgeEngineBrush}">
                <TextBlock x:Name="SourceText" Text="Engine" FontSize="10"
                           FontWeight="SemiBold" Foreground="White"
                           HorizontalAlignment="Center"/>
            </Border>
            <TextBlock x:Name="MessageText" Text="" FontSize="12"
                       FontFamily="Cascadia Code,Consolas,Courier New"
                       Foreground="{DynamicResource TextPrimaryBrush}"
                       TextWrapping="Wrap" MaxWidth="800"/>
        </StackPanel>
    </Border>
</UserControl>
